<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="Create table t_chat" author="Baranova.AA">
        <createTable tableName="t_chat" remarks="Chat">
            <column name="id" type="uuid" remarks="Record ID">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)" remarks="chat title"/>
            <column name="created_at" type="datetime" remarks="Chat creation time"/>
        </createTable>
    </changeSet>

    <changeSet id="Create table t_message" author="Baranova.AA">
        <createTable tableName="t_message" remarks="Message">
            <column name="id" type="uuid" remarks="Record ID">
                <constraints primaryKey="true"/>
            </column>
            <column name="author_id" type="uuid" remarks="Id of the message author"/>
            <column name="posted_at" type="timestamp" remarks="Datetime of message creation"/>
            <column name="chat_id" type="uuid" remarks="Id of the chat where message was posted"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="t_message"
                                 baseColumnNames="author_id"
                                 constraintName="message__to__user__fk"
                                 referencedTableName="t_user"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>

        <addForeignKeyConstraint baseTableName="t_message"
                                 baseColumnNames="chat_id"
                                 constraintName="message__to__chat__fk"
                                 referencedTableName="t_chat"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/> 

        <createIndex tableName="t_message" indexName="t_message_chat__index">
            <column name="chat_id"/>
        </createIndex>
    </changeSet>

   <changeSet id="Create table t_chat_member_info" author="Baranova.AA">
        <createTable tableName="t_chat_member_info" remarks="Chat participant info">
            <column name="id" type="uuid" remarks="Record ID">
                <constraints primaryKey="true"/>
            </column>
            <column name="chat_id" type="uuid" remarks="Id of the chat"/>
            <column name="user_id" type="uuid" remarks="Id of the user"/>
            <column name="chat_role" type="varchar" remarks="Members role in the current chat"/>
            <column name="joined_at" type="datetime" remarks="Datetime when user joined the chat"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="t_chat_member_info"
                                 baseColumnNames="user_id"
                                 constraintName="chat_member_info__to__user__fk"
                                 referencedTableName="t_user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="t_chat_member_info"
                                 baseColumnNames="chat_id"
                                 constraintName="chat_member_info__to__chat__fk"
                                 referencedTableName="t_chat"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createIndex tableName="t_chat_member_info" indexName="t_chat_member_info__index">
            <column name="chat_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>